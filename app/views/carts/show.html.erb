<div class="cart-page">
  <div class="cart-page__header">
    <h1><%= t("cart.show.title") %></h1>
    <%= link_to t("cart.show.back"), root_path %>
  </div>

  <div class="cart-page__body">
    <div class="cart-page__body--product-cards">
      <%= render partial: "./shared/product_card",
        collection: @view.products,
        locals: { product_page: false },
        as: "product" || t("cart.show.empty")
      %>
    </div>

    <div class="cart-page__body--total-price">
      <h3><%= t("cart.show.cart_total") %></h3>
      <p><%= t("cart.show.total", total: price_formatter(@view.total)) %></p>
      <%= @view.discounted_price %>
    </div>
  </div>
</div>
